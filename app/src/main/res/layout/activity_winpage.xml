<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Winpage_Activity"
    android:background="@drawable/background_firstpaze">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puzzle 1 completed"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/puzzlescompleted"/>

    <ImageView
        android:id="@+id/trophy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/trophy"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:layout_below="@+id/puzzlescompleted"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:id="@+id/wincontinewbutton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:text="ð•”ð• ð•Ÿð•¥ð•šð•Ÿð•–ð•¨"
        android:textSize="40dp"
        android:layout_below="@+id/trophy"
        app:backgroundTint="@null"
        android:background="@drawable/button_winpage"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:id="@+id/mainmenu"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:text="main menu"
        android:textSize="25dp"
        android:layout_below="@+id/wincontinewbutton"
        app:backgroundTint="@null"
        android:background="@drawable/button_winpage"/>
    <Button
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:id="@+id/buypro"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:text="buy pro"
        android:textSize="25dp"
        android:layout_below="@+id/mainmenu"
        app:backgroundTint="@null"
        android:background="@drawable/button_winpage"/>
</RelativeLayout>